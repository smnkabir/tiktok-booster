<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".ProfileActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:id="@+id/img_back_button"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/img_back_button"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_back_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="155dp"
                        android:layout_height="155dp"
                        app:cardBackgroundColor="#787878"
                        app:cardCornerRadius="250dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="250dp">

                            <ImageView
                                android:id="@+id/iv_profile_image_id"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/garyvee" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_profile_name_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Gary Vaynerchuk"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_profile_username_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/tv_profile_followers_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/followers"
                            android:gravity="center"
                            android:text="2.9M Followers"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/tv_profile_likes_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/likes"
                            android:gravity="center"
                            android:text="2.9M Likes"
                            android:textColor="@color/white"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="10dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_countDown_caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/countDown_caption"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_margin="15dp"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_countDown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CountDown"
                        android:textSize="40sp"
                        android:textColor="#edba00"
                        android:gravity="center"
                        />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_help"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/help" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ic_help_outline_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="HELP"
                                android:textColor="@color/white"
                                android:textSize="30sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_hastag"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/hashtags" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ic_hashtag" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="HASHTAGS"
                                android:textColor="@color/white"
                                android:textSize="30sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_server_stopped"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp">

                            <TextView
                                android:id="@+id/tv_server"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_warning_black_24dp"
                                android:text="*Server is stopped"
                                android:textColor="#ff6d58"
                                android:textSize="30sp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_boost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            >
                            <requestFocus></requestFocus>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/booster" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/ic_booster" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="BOOSTER"
                                    android:textColor="@color/white"
                                    android:textSize="30sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

</LinearLayout>